{% extends 'frontend/base.html.twig' %}

{% block title %}Podcasts{% endblock %}

{% block main %}
<div class="container py-5">
    <h1 class="mb-4 text-center">Tous les Podcasts</h1>
    
    <div class="mb-5">
        <h2><i class="fas fa-volume-up text-info mr-2"></i> Podcasts Audio</h2>
        {% if audioPodcasts is not empty %}
            <div class="row">
                {% for podcast in audioPodcasts %}
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            {% if podcast.thumbnail %}
                                <img src="{{ asset('uploads/podcasts/' ~ podcast.thumbnail) }}" class="card-img-top" alt="{{ podcast.title }}">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="{{ path('app_podcast_show', {slug: podcast.slug}) }}">
                                        {{ podcast.title|length > 60 ? podcast.title|slice(0,60) ~ '…' : podcast.title }}
                                    </a>
                                </h5>
                                <p class="card-text text-muted small">
                                    {{ podcast.createdAt|date('d/m/Y') }}
                                </p>
                                {% if podcast.description %}
                                    <p class="card-text">
                                        {{ podcast.description|striptags|u.truncate(100, '…') }}
                                    </p>
                                {% endif %}
                            </div>
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <span class="badge badge-info">Audio</span>
                                {% if podcast.duration %}
                                    <span class="text-muted"><i class="fas fa-clock mr-1"></i> {{ podcast.duration }}</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-muted">Aucun podcast audio disponible.</p>
        {% endif %}
    </div>

    <div>
        <h2><i class="fas fa-video text-success mr-2"></i> Podcasts Vidéo</h2>
        {% if videoPodcasts is not empty %}
            <div class="row">
                {% for podcast in videoPodcasts %}
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            {% if podcast.thumbnail %}
                                <img src="{{ asset('uploads/podcasts/' ~ podcast.thumbnail) }}" class="card-img-top" alt="{{ podcast.title }}">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="{{ path('app_podcast_show', {slug: podcast.slug}) }}">
                                        {{ podcast.title|length > 60 ? podcast.title|slice(0,60) ~ '…' : podcast.title }}
                                    </a>
                                </h5>
                                <p class="card-text text-muted small">
                                    {{ podcast.createdAt|date('d/m/Y') }}
                                </p>
                                {% if podcast.description %}
                                    <p class="card-text">
                                        {{ podcast.description|striptags|u.truncate(100, '…') }}
                                    </p>
                                {% endif %}
                            </div>
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <span class="badge badge-success">Vidéo</span>
                                {% if podcast.duration %}
                                    <span class="text-muted"><i class="fas fa-clock mr-1"></i> {{ podcast.duration }}</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-muted">Aucun podcast vidéo disponible.</p>
        {% endif %}
    </div>
</div>
{% endblock %}