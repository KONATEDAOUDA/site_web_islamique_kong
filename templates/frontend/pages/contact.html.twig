<!-- Contact Form Section -->
<section class="contact-area space-bottom">
    <div class="container">
        <div class="row">
            <div class="col-xl-6">
                <div class="contact-form-wrap">
                    <div class="title-area mb-30">
                        <span class="sub-title">Envoyez-nous un message</span>
                        <h2 class="sec-title">Nous sommes là pour vous aider</h2>
                    </div>
                    <form action="{{ path('app_contact') }}" method="POST" class="contact-form ajax-contact">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="name" id="name" placeholder="Votre nom*" required>
                                    <i class="fal fa-user"></i>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="email" class="form-control" name="email" id="email" placeholder="Votre email*" required>
                                    <i class="fal fa-envelope"></i>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="tel" class="form-control" name="number" id="number" placeholder="Votre téléphone">
                                    <i class="fal fa-phone"></i>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <select name="subject" id="subject" class="form-select">
                                        <option value="">Sujet du message</option>
                                        <option value="general">Question générale</option>
                                        <option value="archive">Archives et recherche</option>
                                        <option value="collaboration">Collaboration</option>
                                        <option value="donation">Don et soutien</option>
                                        <option value="technique">Support technique</option>
                                        <option value="other">Autre</option>
                                    </select>
                                    <i class="fal fa-chevron-down"></i>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <textarea name="message" id="message" cols="30" rows="3" class="form-control" placeholder="Votre message*" required></textarea>
                                    <i class="fal fa-comment"></i>
                                </div>
                            </div>
                            <div class="form-btn col-12">
                                <button class="th-btn">Envoyer le message</button>
                            </div>
                        </div>
                        <p class="form-messages mb-0 mt-3"></p>
                    </form>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="contact-map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d31697.776782964087!2d-5.4584599!3d9.3847!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xf0331e7f7c4c6b9%3A0x8b5f0df4c4b8e0c6!2sKong%2C%20C%C3%B4te%20d'Ivoire!5e0!3m2!1sfr!2sus!4v1706789123456!5m2!1sfr!2sus" 
                            width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- FAQ Section -->
