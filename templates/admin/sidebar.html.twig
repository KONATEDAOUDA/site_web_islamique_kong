{# templates/admin/sidebar.html.twig #}
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Logo -->
    <a href="{{ path('admin_dashboard') }}" class="brand-link">
        <img src="{{ asset('images/logo.png') }}" alt="Logo Kong" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Kong Admin</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Utilisateur -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                {% if app.user.profilePicture %}
                    <img src="{{ asset('uploads/users/' ~ app.user.profilePicture) }}" class="img-circle elevation-2" alt="User Image">
                {% else %}
                    <img src="{{ asset('adminlte/img/user2-160x160.jpg') }}" class="img-circle elevation-2" alt="User Image">
                {% endif %}
            </div>
            <div class="info">
                <a href="#" class="d-block">{{ app.user.firstname }} {{ app.user.lastname }}</a>
            </div>
        </div>

        <!-- Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Tableau de bord -->
                <li class="nav-item">
                    <a href="{{ path('admin_dashboard') }}" class="nav-link {% if app.request.get('_route') == 'admin_dashboard' %}active{% endif %}">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>Tableau de bord</p>
                    </a>
                </li>
                
                <!-- Gestion des Articles -->
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_BLOG_MANAGER') %}
                <li class="nav-item {% if app.request.get('_route') starts with 'admin_article' %}menu-open{% endif %}">
                    <a href="#" class="nav-link {% if app.request.get('_route') starts with 'admin_article' %}active{% endif %}">
                        <i class="nav-icon fas fa-newspaper"></i>
                        <p>
                            Articles
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Liste des articles</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Ajouter un article</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('admin', {crudController: 'App\\Controller\\Admin\\CategoryCrudController', crudAction: 'index'}) }}" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Catégories</p>
                            </a>
                        </li>
                    </ul>
                </li>
                {% endif %}
                
                <!-- Gestion des Podcasts -->
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_TEACHER') %}
                <li class="nav-item {% if app.request.get('_route') starts with 'admin_podcast' %}menu-open{% endif %}">
                    <a href="#" class="nav-link {% if app.request.get('_route') starts with 'admin_podcast' %}active{% endif %}">
                        <i class="nav-icon fas fa-microphone"></i>
                        <p>
                            Podcasts
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Liste des podcasts</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Ajouter un podcast</p>
                            </a>
                        </li>
                    </ul>
                </li>
                {% endif %}
                
                <!-- Gestion des Archives -->
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_ARCHIVE_MANAGER') %}
                <li class="nav-item {% if app.request.get('_route') starts with 'admin_archive' %}menu-open{% endif %}">
                    <a href="#" class="nav-link {% if app.request.get('_route') starts with 'admin_archive' %}active{% endif %}">
                        <i class="nav-icon fas fa-archive"></i>
                        <p>
                            Archives
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Liste des archives</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Ajouter une archive</p>
                            </a>
                        </li>
                    </ul>
                </li>
                {% endif %}
                
                <!-- Gestion des Enseignements -->
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_TEACHER') %}
                <li class="nav-item {% if app.request.get('_route') starts with 'admin_enseignement' %}menu-open{% endif %}">
                    <a href="#" class="nav-link {% if app.request.get('_route') starts with 'admin_enseignement' %}active{% endif %}">
                        <i class="nav-icon fas fa-chalkboard-teacher"></i>
                        <p>
                            Enseignements
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Liste des enseignements</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Ajouter un enseignement</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Maîtres islamiques</p>
                            </a>
                        </li>
                    </ul>
                </li>
                {% endif %}
                
                <!-- Gestion du Forum -->
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPERVISOR') %}
                <li class="nav-item {% if app.request.get('_route') starts with 'admin_forum' %}menu-open{% endif %}">
                    <a href="#" class="nav-link {% if app.request.get('_route') starts with 'admin_forum' %}active{% endif %}">
                        <i class="nav-icon fas fa-comments"></i>
                        <p>
                            Forum
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Sujets</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Messages</p>
                            </a>
                        </li>
                    </ul>
                </li>
                {% endif %}
                
                <!-- Utilisateurs -->
                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item {% if app.request.get('_route') starts with 'admin_user' %}menu-open{% endif %}">
                    <a href="#" class="nav-link {% if app.request.get('_route') starts with 'admin_user' %}active{% endif %}">
                        <i class="nav-icon fas fa-users"></i>
                        <p>
                            Utilisateurs
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="{{ path('admin', {crudController: 'App\\Controller\\Admin\\UserCrudController', crudAction: 'index'}) }}" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Liste des utilisateurs</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('admin', {crudController: 'App\\Controller\\Admin\\UserCrudController', crudAction: 'new'}) }}" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Ajouter un utilisateur</p>
                            </a>
                        </li>
                    </ul>
                </li>
                {% endif %}
                
                <!-- Paramètres -->
                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item {% if app.request.get('_route') starts with 'admin_settings' %}menu-open{% endif %}">
                    <a href="#" class="nav-link {% if app.request.get('_route') starts with 'admin_settings' %}active{% endif %}">
                        <i class="nav-icon fas fa-cogs"></i>
                        <p>
                            Paramètres
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="{{ path('admin', {crudController: 'App\\Controller\\Admin\\ParamsCrudController', crudAction: 'index'}) }}" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Configuration du site</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('admin', {crudController: 'App\\Controller\\Admin\\AppFAQCrudController', crudAction: 'index'}) }}" class="nav-link">
                                <i class="far fa-circle nav-icon"></i>
                                <p>FAQ</p>
                            </a>
                        </li>
                    </ul>
                </li>
                {% endif %}
                
                <!-- Accès à EasyAdmin -->
                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                    <a href="{{ path('admin') }}" class="nav-link">
                        <i class="nav-icon fas fa-th"></i>
                        <p>EasyAdmin</p>
                    </a>
                </li>
                {% endif %}
                
                <!-- Déconnexion -->
                <li class="nav-item">
                    <a href="{{ path('app_logout') }}" class="nav-link">
                        <i class="nav-icon fas fa-sign-out-alt"></i>
                        <p>Déconnexion</p>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</aside>